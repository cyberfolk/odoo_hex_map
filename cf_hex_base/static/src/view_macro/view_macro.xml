<t t-name="ViewMacro">
    <div class="position-fixed p-3" style="z-index: 100;">
        <div id="ZoomButtons">
            <t t-set="zoomLevels" t-value="[100, 150, 175, 200, 300, 500]"/>
            <t t-foreach="zoomLevels" t-as="_zoom" t-key="_zoom">
                <button class="btn me-1" t-on-click="() => this.setZoom(_zoom + '%')"
                        t-att-class="zoom == _zoom + '%' ? 'btn-primary': 'btn-secondary'">
                    <t t-esc="'x' + _zoom/100"/>
                </button>
            </t>
        </div>
        <div id="CurrentColorButtons" class="mt-3">
            Setta un colore e dipingi gli Esagoni:
            <div>
                <button class="btn m-1" t-on-click="() => this.setCurrentColor('')"
                        t-att-class="currentColor == ''? 'btn-secondary': 'btn-primary'">Reset
                </button>
                <t t-set="colorList" t-value="['#c7ffff','#FFDF00','#007F00','#2FDF2F','#FF7F00','#FF0000','#BF00FF','#00BFFF','#0000FF']"/>
                <t t-foreach="colorList" t-as="_color" t-key="_color">
                    <button class="btn p-2 me-1" t-att-style="'background-color: ' + _color +';'" t-on-click="() => this.setCurrentColor(_color)"
                            t-att-class="currentColor == _color? 'button_color_active': ''">
                    </button>
                </t>
            </div>
        </div>
    </div>

    <div class="hv-center-fix p-3" t-attf-style="zoom: {{zoom}}">
        <div class="macro_form">
            <div class="macro_dim">
