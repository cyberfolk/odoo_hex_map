<t t-name="ViewMacro">
    <div class="view-macro__sideboard position-fixed w-25 p-3" style="z-index: 100;">
        <ClearCurrent/>
        <CurrentZoom/>
        <CurrentColor/>
        <CurrentTiles/>
    </div>

    <div class="p-3 bg-white" t-attf-style="zoom: {{store.zoom}}"
         t-on-click="resetCurrentSelect_ClickOutside">
        <div class="macro_form m-auto" >
            <t t-foreach="state.macro.quad_ids" t-as="quad" t-key="quad.id">
                <div class="quad bg-dark " t-att-style="getQuadStyle(quad)">
                    <t t-foreach="quad.hex_ids" t-as="hex" t-key="hex.id">
                        <div class="hex hv-center"
                             t-att-style="getHexStyle(hex)"
                             t-att-class="store.isCurrentSelectEmpty() ? 'pointer': 'crosshair'"
                             t-on-click="() => this.onClick(hex)">
                            <t t-if="hex.hex_asset_id">
                                <img class="w-100" t-attf-class="rotate-{{hex.hex_asset_id.rotation}}"
                                     t-att-src="'/web/image/asset.tile/' + hex.hex_asset_id.tile_id + '/image'"/>
                            </t>
                        </div>
                    </t>
                </div>
            </t>
        </div>
    </div>
</t>