<odoo>
    <record id="asset_tile_view_tree" model="ir.ui.view">
        <field name="name">asset.tile.tree</field>
        <field name="model">asset.tile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sub_dir"/>
            </tree>
        </field>
    </record>

    <record id="asset_tile_view_form" model="ir.ui.view">
        <field name="name">asset.tile.form</field>
        <field name="model">asset.tile</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sub_dir"/>
                        </group>
                        <group>
                            <field name="image" widget="image"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>