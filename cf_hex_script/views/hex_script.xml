<odoo>
    <record id="hex_script_view_tree" model="ir.ui.view">
        <field name="name">hex.script.tree</field>
        <field name="model">hex.script</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="biome_id"/>
                <field name="hex_id"/>
                <field name="sml"/>
            </tree>
        </field>
    </record>

    <record id="hex_script_view_form" model="ir.ui.view">
        <field name="name">hex.script.form</field>
        <field name="model">hex.script</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="biome_id"/>
                            <field name="hex_id"/>
                            <field name="sml"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>