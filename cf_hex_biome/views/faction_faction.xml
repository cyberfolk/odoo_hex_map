<odoo>
    <record id="faction_faction_view_search" model="ir.ui.view">
        <field name="name">faction.faction.search</field>
        <field name="model">faction.faction</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="state"/>
                <field name="is_parent"/>
                <field name="is_child"/>
                <filter name="filter_state_active" string="Attivi" domain="[('state', '=', 'active')]"/>
                <filter name="filter_is_parent" string="È Padre" domain="[('is_parent', '=', True)]"/>
                <filter name="filter_is_child" string="È Figlio" domain="[('is_child', '=', True)]"/>
                <filter name="filter_is_not_child" string="Non Figlio" domain="[('is_child', '=', False)]"/>
                <filter name="filter_state_active_and_is_not_child" string="Attive e non Figlio"
                        domain="['&amp;', ('state', '=', 'active'), ('is_child', '=', False)]"/>
                <filter name="groupby_state" string="State" context="{'group_by': 'state'}"/>
            </search>
        </field>
    </record>

    <record id="faction_faction_view_tree" model="ir.ui.view">
        <field name="name">faction.faction.tree</field>
        <field name="model">faction.faction</field>
        <field name="arch" type="xml">
            <!--<tree editable="top">-->
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'active'"
                       decoration-warning="state == 'future'"
                       decoration-muted="state == 'doubtful'"
                       decoration-info="state == 'upcoming'"/>
                <field name="good_evil_axis" widget="badge"
                       decoration-info="good_evil_axis == 'good'"
                       decoration-danger="good_evil_axis == 'evil'"
                       decoration-muted="good_evil_axis == 'neutral'"/>
                <field name="cosmology" widget="badge"
                       decoration-info="cosmology == 'external'"
                       decoration-primary="cosmology == 'mirror'"
                       decoration-warning="cosmology == 'elemental'"/>
                <field name="creature_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="faction_faction_view_kanban" model="ir.ui.view">
        <field name="name">faction.faction.kanban</field>
        <field name="model">faction.faction</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div class="row">
                                <div class="col-12">
                                    <strong>
                                        <t t-esc="record.name.value"/>
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="faction_faction_view_form" model="ir.ui.view">
        <field name="name">faction.faction.form</field>
        <field name="model">faction.faction</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="state" widget="badge" nolabel="1"
                               colspan="2" class=""
                               decoration-success="state == 'active'"
                               decoration-warning="state == 'future'"
                               decoration-muted="state == 'doubtful'"
                               decoration-info="state == 'upcoming'"/>
                        <div class="oe_title mt-2" colspan="2">
                            <h1>
                                <group>
                                    <field colspan="2" class=" text-nowrap" name="name" nolabel="1"/>
                                </group>
                            </h1>
                        </div>
                        <group col="2">
                            <group>
                                <field name="code"/>
                                <field name="state"/>
                                <field name="good_evil_axis"/>
                                <field name="cosmology"/>
                                <field name="parent_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Info MM">
                                <field name="description"/>
                            </page>
                            <page string="Creature">
                                <group>
                                    <field name="desc_creature" nolabel="1" colspan="2"/>
                                </group>
                                <group string="Creature della fazione" colspan="2">
                                    <field name="creature_ids" nolabel="1" colspan="2"/>
                                </group>
                            </page>
                            <page string="Domande">
                                <group col="3">
                                    <group col="1" string="Info base:">
                                        <group string="1. Da quanti anni sono nella regione?">
                                            <field name="n01_years_in_region" nolabel="1" colspan="2"/>
                                        </group>
                                        <group string="2. Quali sono le loro operazioni quotidiane?">
                                            <field name="n02_daily_operations" nolabel="1" colspan="2"/>
                                        </group>
                                        <group string="3. Come si nutrono?">
                                            <field name="n03_feeding_habits" nolabel="1" colspan="2"/>
                                        </group>
                                    </group>
                                    <group col="1" string="Gerarchia e struttura sociale">
                                        <group string="4. Come si occupano delle normali minacce?">
                                            <field name="n04_handling_threats" nolabel="1" colspan="2"/>
                                        </group>
                                        <group string="5. A quali poteri rispondono?">
                                            <field name="n05_answering_powers" nolabel="1" colspan="2"/>
                                        </group>
                                        <group string="6. Hanno degli esploratori?">
                                            <field name="n06_scouts" nolabel="1" colspan="2"/>
                                        </group>
                                    </group>
                                    <group col="1" string="Territorio e influenza">
                                        <group string="7. Che posizioni chiave controllano?">
                                            <field name="n07_key_positions_controlled" nolabel="1" colspan="2"/>
                                        </group>
                                        <group string="8. Come segnano i loro confini?">
                                            <field name="n08_boundary_marking" nolabel="1" colspan="2"/>
                                        </group>
                                        <group string="9. Come rivendicano il loro territorio?">
                                            <field name="n09_territory_claiming" nolabel="1" colspan="2"/>
                                        </group>
                                    </group>
                                    <group col="1" string="Basi">
                                        <group string="10. Che Struttura è la loro Base?">
                                            <field name="n10_base_structure" nolabel="1" colspan="2"/>
                                        </group>
                                        <group string="11. L'hanno costruita loro o esisteva già?">
                                            <field name="n11_base_origin" nolabel="1" colspan="2"/>
                                        </group>
                                        <group string="12. Perché viene utilizzata?">
                                            <field name="n12_base_purpose" nolabel="1" colspan="2"/>
                                        </group>
                                    </group>
                                    <group col="1" string="Motivazioni">
                                        <group string="13. Obbiettivi a Lungo Termine?">
                                            <field name="n13_long_term_goals" nolabel="1" colspan="2"/>
                                        </group>
                                        <group string="14. Obbiettivi a Breve Termine?">
                                            <field name="n14_short_term_goals" nolabel="1" colspan="2"/>
                                        </group>
                                        <group string="15. Da che motivazioni sono spinti?">
                                            <field name="n15_motivations" nolabel="1" colspan="2"/>
                                        </group>
                                        <group string="16. In che modo intendono Raggiungerli?">
                                            <field name="n16_goal_strategy" nolabel="1" colspan="2"/>
                                        </group>
                                    </group>
                                    <group col="1" string="Extra">
                                        <group string="17. I leader come vede i PG?">
                                            <field name="n17_leader_view_of_pcs" nolabel="1" colspan="2"/>
                                        </group>
                                        <group string="18.Come entrano in contatto coi PG?">
                                            <field name="n18_contact_with_pcs" nolabel="1" colspan="2"/>
                                        </group>

                                        <group string="19. Possibili sviluppi della Fazione?">
                                            <field name="n19_possible_developments" nolabel="1" colspan="2"/>
                                        </group>
                                        <group string="20. Tema della Fazione?">
                                            <field name="n20_faction_theme" nolabel="1" colspan="2"/>
                                        </group>
                                    </group>
                                </group>
                            </page>
                            <page string="Fazioni figlie">
                                <group string="Fazioni figlie" colspan="2">
                                    <field name="child_ids" nolabel="1" colspan="2"/>
                                </group>
                            </page>
                            <page string="Scontri">
                                <group string="Scontri della fazione" colspan="2">
                                    <field name="encounter_ids" nolabel="1" colspan="2">
                                        <tree>
                                            <field name="sml"/>
                                            <field name="name"/>
                                            <field name="exp_adj"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
