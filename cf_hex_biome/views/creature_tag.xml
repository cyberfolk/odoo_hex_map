<odoo>
    <record id="creature_tag_view_kanban" model="ir.ui.view">
        <field name="name">creature.tag.kanban</field>
        <field name="model">creature.tag</field>
        <field name="arch" type="xml">
<!--            <kanban class="o_kanban_mobile" default_group_by="kanban_is_faction_label">-->
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="row">
                                <div class="col-12">
                                    <strong>
                                        <t t-esc="record.name.value"/>
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="creature_tag_view_tree" model="ir.ui.view">
        <field name="name">creature.tag.tree</field>
        <field name="model">creature.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
<!--                <field name="is_faction" widget="boolean_toggle"/>-->
            </tree>
        </field>
    </record>

    <record id="creature_tag_view_form" model="ir.ui.view">
        <field name="name">creature.tag.form</field>
        <field name="model">creature.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div class="oe_title mt-2" colspan="2">
                            <h1>
                                <group>
                                    <field class="text-nowrap" name="name" readonly="1" nolabel="1"/>
                                </group>
                            </h1>
                        </div>
                        <group>
<!--                            <field name="is_faction" widget="boolean_toggle"/>-->
                        </group>
                        <group string="Creature" colspan="2">
                            <field name="creature_ids" nolabel="1" colspan="2">
                                <tree>
                                    <field name="name"/>
                                    <field name="tag_ids" widget="many2many_tags"/>
                                    <field name="biome_high_prob_ids" widget="many2many_tags"/>
                                    <field name="biome_low_prob_ids" widget="many2many_tags"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>