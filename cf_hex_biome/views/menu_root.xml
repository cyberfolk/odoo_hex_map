<odoo>
    <record id="action_menu_biome_biome" model="ir.actions.act_window">
        <field name="name">Tipi di Biomi</field>
        <field name="res_model">biome.biome</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id="action_menu_structure_structure" model="ir.actions.act_window">
        <field name="name">Strutture</field>
        <field name="res_model">structure.structure</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_menu_creature_creature" model="ir.actions.act_window">
        <field name="name">Creature</field>
        <field name="res_model">creature.creature</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_menu_creature_tag" model="ir.actions.act_window">
        <field name="name">Creature Tag</field>
        <field name="res_model">creature.tag</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id="action_menu_creature_type" model="ir.actions.act_window">
        <field name="name">Creature Tipi</field>
        <field name="res_model">creature.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_menu_creature_encounter" model="ir.actions.act_window">
        <field name="name">Creature Scontri</field>
        <field name="res_model">creature.encounter</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_menu_creature_encounter_line" model="ir.actions.act_window">
        <field name="name">Creature Scontri Linee</field>
        <field name="res_model">creature.encounter.line</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_menu_todo" model="ir.actions.act_window">
        <field name="name">TODO</field>
        <field name="res_model">todo</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="action_exp_tool" model="ir.actions.client">
        <field name="name">Exp Tool</field>
        <field name="tag">exp_tool</field>
    </record>

    <menuitem sequence="1" id="menu_biome" name="Biomi" parent="cf_hex_base.menu_root">
        <menuitem sequence="0" id="menu_biome_biome" name="Biomi" action="action_menu_biome_biome"/>
        <menuitem sequence="0" id="menu_structure_structure" name="Strutture" action="action_menu_structure_structure"/>
    </menuitem>
    <menuitem sequence="2" id="menu_creature" name="Creature" parent="cf_hex_base.menu_root">
        <menuitem sequence="0" id="menu_creature_creature" name="Creature" action="action_menu_creature_creature"/>
        <menuitem sequence="1" id="menu_creature_tag" name="Creature Tag" action="action_menu_creature_tag"/>
        <menuitem sequence="2" id="menu_creature_type" name="Creature Tipi" action="action_menu_creature_type"/>
        <menuitem sequence="4" id="menu_creature_encounter" name="Creature Scontri" action="action_menu_creature_encounter"/>
        <menuitem sequence="5" id="menu_creature_encounter_line" name="Creature Scontri Linee" action="action_menu_creature_encounter_line"/>
    </menuitem>
    <menuitem sequence="3" id="menu_exp_tool" name="Exp Tool" parent="cf_hex_base.menu_root" action="action_exp_tool"/>
    <menuitem sequence="4" id="menu_todo" name="TODO" parent="cf_hex_base.menu_root" action="action_menu_todo"/>
</odoo>