<odoo>
    <record id="structure_structure_view_tree" model="ir.ui.view">
        <field name="name">structure.structure.tree</field>
        <field name="model">structure.structure</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="biome_type_ids" widget='many2many_tags'/>
            </tree>
        </field>
    </record>

    <record id="structure_structure_view_form" model="ir.ui.view">
        <field name="name">structure.structure.form</field>
        <field name="model">structure.structure</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div class="oe_title mt-2" colspan="2">
                            <h1>
                                <group>
                                    <field class="text-nowrap" name="name" readonly="1" nolabel="1"/>
                                </group>
                            </h1>
                        </div>
                        <group string="Biomi" colspan="2">
                            <field name="biome_type_ids" nolabel="1" colspan="2" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>