<odoo>
    <record id="biome_type_view_tree" model="ir.ui.view">
        <field name="name">biome.type.tree</field>
        <field name="model">biome.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="color" widget="color"/>
                <field name="speed_of_travel"/>
                <field name="cd_food"/>
                <field name="cd_water"/>
                <field name="cd_navigation"/>
                <field name="structure_ids"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'active'"
                       decoration-warning="state == 'future'"
                       decoration-muted="state == 'doubtful'"
                       decoration-info="state == 'upcoming'"/>
                <field name="good_evil_axis" widget="badge"
                       decoration-info="good_evil_axis == 'good'"
                       decoration-danger="good_evil_axis == 'evil'"
                       decoration-muted="good_evil_axis == 'neutral'"/>
                <field name="cosmology" widget="badge"
                       decoration-info="cosmology == 'external'"
                       decoration-primary="cosmology == 'mirror'"
                       decoration-warning="cosmology == 'elemental'"/>
            </tree>
        </field>
    </record>

    <record id="biome_type_view_form" model="ir.ui.view">
        <field name="name">biome.type.form</field>
        <field name="model">biome.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="state" widget="badge" nolabel="1"
                               colspan="2" class=""
                               decoration-success="state == 'active'"
                               decoration-warning="state == 'future'"
                               decoration-muted="state == 'doubtful'"
                               decoration-info="state == 'upcoming'"/>

                        <div class="oe_title mt-2" colspan="2">
                            <h1>
                                <group>
                                    <field class="text-nowrap" name="name" readonly="1" nolabel="1"/>
                                    <field name="color" widget="color" nolabel="1"/>
                                </group>
                            </h1>
                        </div>
                        <group col="3">
                            <group>
                                <field name="cd_food"/>
                                <field name="cd_water"/>
                                <field name="cd_navigation"/>
                            </group>
                            <group>
                                <field name="state"/>
                                <field name="good_evil_axis"/>
                                <field name="cosmology"/>
                            </group>
                            <group>
                                <field name="speed_of_travel"/>
                            </group>
                        </group>
                        <group string="Strutture" colspan="2">
                            <field name="structure_ids" nolabel="1" colspan="2" widget='many2many_tags'/>
                        </group>
                        <group string="Creature con Alta probabilità di trovarle nel Bioma" colspan="2">
                            <field name="creature_high_prob_ids" nolabel="1" colspan="2" widget='many2many_tags'/>
                        </group>
                        <group string="Creature con Bassa probabilità di trovarle nel Bioma" colspan="2">
                            <field name="creature_low_prob_ids" nolabel="1" colspan="2" widget='many2many_tags'/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>