<odoo>
    <record id="creature_encounter_view_search" model="ir.ui.view">
        <field name="name">creature.encounter.search</field>
        <field name="model">creature.encounter</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="creature_ids"/>
                <field name="biome_ids"/>
                <field name="sml"/>
                <field name="exp_adj"/>
                <filter name="filter_tag_endemic" string="Endemico" domain="[('is_endemic', '=', True)]"/>
                <filter string="Biomi" name="groupby_biome_ids" context="{'group_by': 'biome_ids'}"/>
                <filter string="sml" name="groupby_sml" context="{'group_by': 'sml'}"/>
            </search>
        </field>
    </record>

    <record id="creature_encounter_view_tree" model="ir.ui.view">
        <field name="name">creature.encounter.tree</field>
        <field name="model">creature.encounter</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sml"/>
                <field name="name"/>
                <field name="exp_adj"/>
                <field name="is_endemic"/>
                <field name="biome_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="creature_encounter_view_form" model="ir.ui.view">
        <field name="name">creature.encounter.form</field>
        <field name="model">creature.encounter</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div class="oe_title mt-2" colspan="2">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="biome_ids" widget="many2many_tags"/>
                            <field name="exp_adj"/>
                            <field name="exp_sum"/>
                            <field name="sml"/>
                        </group>
                        <group string="Componenti dello scontro" colspan="2">
                            <field name="line_ids" nolabel="1" colspan="2">
                                <tree>
                                    <field name="name"/>
                                    <field name="creature_qty"/>
                                    <field name="creature_id"/>
                                    <field name="cr"/>
                                    <field name="exp_sum" string="Exp riga"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>