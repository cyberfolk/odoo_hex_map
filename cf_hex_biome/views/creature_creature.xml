<odoo>
    <record id="creature_creature_view_search" model="ir.ui.view">
        <field name="name">creature.creature.search</field>
        <field name="model">creature.creature</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="cr"/>
                <field name="type_id"/>
                <field name="tag_ids"/>
                <field name="biome_low_prob_ids"/>
                <field name="biome_high_prob_ids"/>
                <field name="biome_ids"/>
            </search>
        </field>
    </record>

    <record id="creature_creature_view_tree" model="ir.ui.view">
        <field name="name">creature.creature.tree</field>
        <field name="model">creature.creature</field>
        <field name="arch" type="xml">
            <tree decoration-bf="cool"
                  decoration-muted="skip" editable="top">
                <field name="name"/>
                <field name="link_5et" widget="url" text="Link 5etools"/>
                <field name="cr"/>
                <field name="type_id"/>
                <field name="skip" widget="boolean_toggle"/>
                <field name="cool" widget="boolean_toggle"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="biome_low_prob_ids" widget="many2many_tags"/>
                <field name="biome_high_prob_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="creature_creature_view_form" model="ir.ui.view">
        <field name="name">creature.creature.form</field>
        <field name="model">creature.creature</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <span class="badge rounded-pill text-white bg-success me-2" invisible="not cool">Interessante</span>
                    <span class="badge rounded-pill text-white bg-info" invisible="not skip">Sconosciuta</span>
                    <group>
                        <div class="oe_title mt-2" colspan="2">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="link_5et" widget="url" nolabel="1" colspan="2" readonly="1"/>
                            <field name="cr" string="GS" readonly="1"/>
                            <field name="type_id" readonly="1"/>
                            <field name="skip" widget="boolean_toggle"/>
                            <field name="cool" widget="boolean_toggle"/>
                        </group>
                        <group string="Tag" colspan="2">
                            <field name="tag_ids" nolabel="1" colspan="2" widget="many2many_tags"/>
                        </group>
                        <group string="Biomi con Alta probabilitÃ  di trovare la creatura" colspan="2">
                            <field name="biome_high_prob_ids" nolabel="1" colspan="2" widget="many2many_tags"/>
                        </group>
                        <group string="Biomi con Bassa probabilitÃ  di trovare la creatura" colspan="2">
                            <field name="biome_low_prob_ids" nolabel="1" colspan="2" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>