<odoo>
    <record id="creature_encounter_line_view_tree" model="ir.ui.view">
        <field name="name">creature.encounter.line.tree</field>
        <field name="model">creature.encounter.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="encounter_id"/>
                <field name="creature_qty"/>
                <field name="creature_id"/>
            </tree>
        </field>
    </record>

    <record id="creature_encounter_line_view_form" model="ir.ui.view">
        <field name="name">creature.encounter.line.form</field>
        <field name="model">creature.encounter.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="1">
                        <div class="oe_title mt-2">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group col="3">
                            <group>
                                <field name="creature_qty"/>
                                <field name="creature_id"/>
                            </group>
                            <group>
                                <field name="exp_sum"/>
                                <field name="exp_single"/>
                            </group>
                            <group>
                                <field name="encounter_id" readonly="1"/>
                                <field name="cr"/>
                            </group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>