<odoo>
        <record id="biome_biome_view_search" model="ir.ui.view">
        <field name="name">biome.biome.search</field>
        <field name="model">biome.biome</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="state"/>
                <filter name="filter_state_active" string="Attivi" domain="[('state', '=', 'active')]"/>
                <filter name="groupby_state" string="State" context="{'group_by': 'state'}"/>
            </search>
        </field>
    </record>

    <record id="biome_biome_view_tree" model="ir.ui.view">
        <field name="name">biome.biome.tree</field>
        <field name="model">biome.biome</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="color" widget="color"/>
                <field name="speed_of_travel"/>
                <field name="cd_food"/>
                <field name="cd_water"/>
                <field name="cd_navigation"/>
                <field name="structure_ids"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'active'"
                       decoration-warning="state == 'future'"
                       decoration-muted="state == 'doubtful'"
                       decoration-info="state == 'upcoming'"/>
                <field name="good_evil_axis" widget="badge"
                       decoration-info="good_evil_axis == 'good'"
                       decoration-danger="good_evil_axis == 'evil'"
                       decoration-muted="good_evil_axis == 'neutral'"/>
                <field name="cosmology" widget="badge"
                       decoration-info="cosmology == 'external'"
                       decoration-primary="cosmology == 'mirror'"
                       decoration-warning="cosmology == 'elemental'"/>
            </tree>
        </field>
    </record>

    <record id="biome_biome_view_kanban" model="ir.ui.view">
        <field name="name">biome.biome.kanban</field>
        <field name="model">biome.biome</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="color" widget="color"/>
                <field name="kanban_color_name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click"
                             t-attf-style="background-color: {{record.color.value}}; color: {{record.kanban_color_name.value}};">
                            <div class="row">
                                <div class="col-12">
                                    <strong>
                                        <t t-esc="record.name.value"/>
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="biome_biome_view_form" model="ir.ui.view">
        <field name="name">biome.biome.form</field>
        <field name="model">biome.biome</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="state" widget="badge" nolabel="1"
                               colspan="2" class=""
                               decoration-success="state == 'active'"
                               decoration-warning="state == 'future'"
                               decoration-muted="state == 'doubtful'"
                               decoration-info="state == 'upcoming'"/>

                        <div class="oe_title mt-2" colspan="2">
                            <h1>
                                <group>
                                    <field class="text-nowrap" name="name" readonly="1" nolabel="1"/>
                                    <field name="color" widget="color" nolabel="1"/>
                                </group>
                            </h1>
                        </div>
                        <group col="3">
                            <group>
                                <field name="cd_food"/>
                                <field name="cd_water"/>
                                <field name="cd_navigation"/>
                            </group>
                            <group>
                                <field name="state"/>
                                <field name="good_evil_axis"/>
                                <field name="cosmology"/>
                            </group>
                            <group>
                                <field name="speed_of_travel"/>
                            </group>
                        </group>
                        <group string="Strutture" colspan="2">
                            <field name="structure_ids" nolabel="1" colspan="2" widget='many2many_tags'/>
                        </group>
                        <group string="Creature con Alta probabilità di trovarle nel Bioma" colspan="2">
                            <field name="creature_high_prob_ids" nolabel="1" colspan="2" widget='many2many_tags'/>
                        </group>
                        <group string="Creature con Bassa probabilità di trovarle nel Bioma" colspan="2">
                            <field name="creature_low_prob_ids" nolabel="1" colspan="2" widget='many2many_tags'/>
                        </group>
                        <group string="Creature innocue nel Bioma" colspan="2">
                            <field name="creature_innocuous" nolabel="1" colspan="2" widget='many2many_tags'/>
                        </group>
                        <group string="Creature Non Violente presenti nel bioma" colspan="2">
                            <field name="creature_not_violent" nolabel="1" colspan="2" widget='many2many_tags'/>
                        </group>
                        <group string="Creature Interessanti presenti nel bioma" colspan="2">
                            <field name="creature_cool" nolabel="1" colspan="2" widget='many2many_tags'/>
                        </group>
                        <group string="Creature Endemiche presenti nel bioma" colspan="2">
                            <field name="creature_endemic" nolabel="1" colspan="2" widget='many2many_tags'/>
                        </group>
                        <group string="Scontri del Bioma" colspan="2">
                            <field name="encounter_ids" nolabel="1" colspan="2"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>